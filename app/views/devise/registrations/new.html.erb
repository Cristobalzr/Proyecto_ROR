<div class="p-5">
  <div class="container nueva p-5">
    <h2>Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :Correo %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :role %><br />
        <%= f.select :role, @roles %><br />
      </div>

      <div class="field">
        <%= f.label :Contrase単a %>
        <% if @minimum_password_length %>
        <em>(Minimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "Nueva contrase単a" %>
      </div>


      <div class="field">
        <%= f.label :Confirmar_contrase単a %><br />
        <%= f.password_field :password_confirmation, autocomplete: "Nueva contrase単a" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrar" %>
      </div>
    <% end %>

    <p><%= render "devise/shared/links" %></p>
  </div>
</div>
