<div class="new-pet">
	<div class="container pt-2 pb-2">
		<% if user_signed_in? %>
			<%= link_to 'Ingresa una nueva mascota', new_pet_path, class: "new-pet"%>
			<% else %>
			<h1 class="new-pet pt-1"><a class="blanco"href="new_user_session_path"><u>Inicia sesi√≥n</u></a> o <a class="blanco" href="new_user_registration_path"><u>registrate</u></a> para ingresar una nueva mascota.</h1>
		<% end %>
	</div>
</div>

<div class="mascotas container">
	<div class="pt-5 container">
    <div class="container shadow-sm titulomascotashogar">
      <h1 class="p-2">Mascotas buscando hogar</h1>
    </div>

	</div>
	<div class="row container-fluid pb-5 pt-3">
			<% @pets.each do |pet| %>
				<div class="col-md-3 p-3">
					<div class="card shadow-sm bg-white">
						<a href="<%= pet_path(pet)%>">
							<p><%= image_tag pet.photo.url, class: :pet_photo %></p>
							<div class="card-body">
								<h2 class="card-title container"><%= pet.name %></h2>
							</div>
						</a>
					</div>
				</div>
			<% end %>
	</div>
</div>
