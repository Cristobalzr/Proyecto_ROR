<div class="mascotas container">
	<div class="pt-5 container">
    <div class="">
      <h1 class="display-4">Mascotas buscando hogar</h1>
    </div>

	</div>
	<div class="row container-fluid pb-5">
			<% @pets.each do |pet| %>
				<div class="col-md-3 p-3">
					<div class="card shadow-sm bg-white">
						<a href="<%= pet_path(pet)%>">
							<p><%= image_tag pet.photo.url, class: :pet_photo %></p>
							<div class="card-body">
								<h2 class="card-title container"><%= pet.name %></h2>
							</div>
						</a>
					</div>
				</div>
			<% end %>
	</div>
</div>
