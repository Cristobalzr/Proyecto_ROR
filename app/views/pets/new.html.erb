<div class="row">
  <div class="col">
    <%= form_with model: @pet, local: true do |f| %>
        <div class="">
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name %>
        </div>
        <div class="">
          <%= f.label :descrption, "Descripcion" %>
          <%= f.text_area :description %>
        </div>
        <div class="">
          <%= f.text_field :latitude %>
          <%= f.text_field :longitude %>
        </div>
        <div class="">
          <%= f.submit "Enviar" %>
        </div>
    <% end %>
  </div>
  <div class="col" id="mapid">
  </div>
</div>
