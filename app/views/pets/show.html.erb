<div class="row p-5">
  <div class="col-4 container ">
    <div class="pet-show-new shadow-sm">
      <p><%= image_tag @pet.photo.url, class: 'showphoto' %></p>
      <h1><%= @pet.name %></h1>
      <p><%= @pet.description  %></p>
      <p class="container"><%= link_to 'Eliminar', pet_path(@pet), method: :delete, data: { confirm: 'EstÃ¡s seguro que deseas eliminar esta mascota?' }, class: 'btn btn-sm' %></p>
    </div>
  </div>
  <div class="col-8">
    <div class="">
  		<div class="container" id="mapid">
  		</div>
  	</div>
  </div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', function(){
	    var mymap = null;
			mymap = L.map('mapid').setView([<%= @pet.latitude %>, <%= @pet.longitude %>], 16);
	    createMap(mymap);
      L.circle([<%= @pet.latitude %>, <%= @pet.longitude %>], {
        radius: 100
      }).addTo(mymap);
	});
</script>
