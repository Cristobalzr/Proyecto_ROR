function showPetsLocatios(map){
  $.ajax("/pets/locations")
    .done(function(data){
      console.log(data);
      data.forEach(function(location){
        if(location.latitude && location.longitude){
          L.circle([location.latitude, location.longitude],{
            radius: 100
          }).addTo(map).bindPopup('<h2 class="container">' +location.name.toString() + '</h2>'+ '<a href="/pets/'+location.id+'"><img class="container nueva" src="'+location.photo.url +'" style="width:auto; max-width:150px;max-height:150px;"> <p class="container"><button type="button" class="btn">Primary</button></p></a>');
        }
      });
    });
}

function selectPetLocation(map){
  var marker = {}
  map.on('click',function(e){
    lat = e.latlng.lat;
    lon = e.latlng.lng;

    console.log("Estas en LAT: "+ lat+" y LONG: "+lon );
    $("#pet_latitude").val(lat);
    $("#pet_longitude").val(lon);

    if (marker != undefined) {
        map.removeLayer(marker);
      };
    marker = L.marker([lat,lon]).addTo(map);
  });
}
